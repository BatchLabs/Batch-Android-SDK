<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:id="@+id/layout3container" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ba_adunit3_background" />

    <ImageView
        android:id="@+id/layout3creativeportraitbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="40dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="5dp"
            android:layout_weight="1" >

            <FrameLayout
                android:id="@+id/layout3webviewcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </FrameLayout>

        <ImageView
            android:id="@+id/layout3icon"
            android:layout_width="@dimen/ba_layout3_icon"
            android:layout_height="@dimen/ba_layout3_icon"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip" />

        <TextView
            android:id="@+id/layout3apptitletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/ba_gametitle"
            android:textSize="@dimen/ba_appTitle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/layout3star1"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/layout3star2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/layout3star3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/layout3star4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/layout3star5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="15" />

            <Button
				android:id="@+id/layout3calltoactionbutton"
				android:layout_width="0dip"
				android:layout_height="@dimen/ba_layout3_call_to_action_height"
				android:layout_weight="70"
				android:background="@drawable/ba_roundedcalltoaction"
				android:gravity="center"
				android:textColor="@color/ba_calltoactiontextcolor"
				android:textSize="@dimen/ba_call_to_action_text_size" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="15" />
        </LinearLayout>

        <TextView
            android:id="@+id/layout3sponsored"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ba_sponsored_border"
            android:gravity="center"
			android:text="@string/ba_sponsored"
            android:textColor="@color/ba_sponsoredcolor"
            android:textSize="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/layout3closeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ba_close_white_shadow" />

</RelativeLayout>